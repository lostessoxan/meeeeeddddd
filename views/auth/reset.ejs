<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/products.css">
<link rel="stylesheet" href="/css/login.css">
</head>
<body>

    <%- include('../includes/navigation.ejs') %>
<div class="container">
    <h2 class="page-title">Reset password</h2>

    <% if (errorMessage && errorMessage.length > 0) { %>
        <div class="user-message user-message__error"><%= errorMessage %></div>
    <% } %>

    <form class="login" action="/reset" method="post">
        <div class="form-control">
            <label for="email"><i class="uil uil-envelope"></i> E-Mail</label>
            <input class="<%= errorsArray.includes('email') ? 'invalid' : '' %>" id="email" name="email" type="text" value="<%= oldInput.email %>">
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn">Reset</button>
    </form>
</div>

<%- include('../includes/end.ejs') %>