<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/products.css">
<link rel="stylesheet" href="/css/login.css">
</head>
<body>

    <%- include('../includes/navigation.ejs') %>
<div class="container">
    <h2 class="page-title">New Password</h2>

    <% if (errorMessage && errorMessage.length > 0) { %>
        <div class="user-message user-message__error"><%= errorMessage %></div>
    <% } %>

    <form class="login" action="/new-password" method="post">
        <div class="form-control">
            <label for="password"><i class="uil uil-key-skeleton"></i> New Password</label>
            <input class="<%= errorsArray.includes('password') ? 'invalid' : '' %>" id="password" name="password" type="password" value="<%= oldInput.password %>">
        </div>
        <input type="hidden" name="userId" value="<%= userId %>">
        <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn">Update password</button>
    </form>
</div>

<%- include('../includes/end.ejs') %>